@page
@model RazorPagesMovie.Pages.ChooseRoleModel
@{
    ViewData["Title"] = "Select Role";
}

<style>
    body {
        background-image: url('/images/bg.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        
    }

    .full-screen-center {
        min-height: calc(100vh - 140px); /* adjust for navbar height */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent black */
        border: none;
        color: white;
    }

    .card-header {
        background-color: rgba(0, 0, 0, 0.6); /* Semi-transparent header */
    }

    .btn-transparent {
        background-color: rgba(255, 255, 255, 0.2);
        color: white;
        border: 1px solid white;
    }

    .btn-transparent:hover {
        background-color: rgba(255, 255, 255, 0.4);
        color: black;
    }

    a.btn {
        text-decoration: none;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Login As</h4>
                </div>
                <div class="card-body text-center">
                    <div class="d-grid gap-3">
                        <a class="btn btn-transparent btn-lg" asp-page="/AdminLogin">Admin</a>
                        <a class="btn btn-transparent btn-lg" asp-page="/Login">User</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
