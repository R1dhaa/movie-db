@page "{id:int?}"
@model RazorPagesMovie.Pages_Movies.IndexModel

@{
    ViewData["Title"] = "Movie List";
}

<style>
    body {
        background-image: url('/images/bg.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .full-screen-center {
        min-height: calc(100vh - 140px); /* adjust for navbar height */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent black */
        border: none;
        color: white;
    }

    .card-header {
        background-color: rgba(0, 0, 0, 0.6); /* Semi-transparent header */
    }

    .btn-transparent {
        background-color: rgba(255, 255, 255, 0.2);
        color: white;
        border: 1px solid white;
    }

    .btn-transparent:hover {
        background-color: rgba(255, 255, 255, 0.4);
        color: black;
    }
</style>

<div class="container full-screen-center">
    <div class="col-md-10">
        <div class="card shadow bg-dark bg-opacity-75 text-white">
            <div class="card-header text-center border-0">
                <h4 class="mb-0">Movie List</h4>
            </div>
            <div class="card-body">

                @if (User.IsInRole("Admin"))
                {
                    <div class="mb-3 text-end">
                        <a class="btn btn-primary" asp-page="Create">Create New</a>
                    </div>
                }

                <form method="get" class="row g-3 align-items-end mb-4">
                    <div class="col-md-3">
                        <label asp-for="MovieGenre" class="form-label">Genre</label>
                        <select asp-for="MovieGenre" asp-items="Model.Genres" class="form-select">
                            <option value="">All</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="SearchString" class="form-label">Title</label>
                        <input asp-for="SearchString" class="form-control" placeholder="Search by title" />
                    </div>

                    <div class="col-md-auto d-flex gap-2">
                        <button type="submit" class="btn btn-outline-light">Filter</button>

                        <a class="btn btn-success"
                           asp-page="Export"
                           asp-route-SearchString="@Model.SearchString"
                           asp-route-MovieGenre="@Model.MovieGenre"
                           asp-route-exportMode="all">
                            Export All
                        </a>

                        <a class="btn btn-warning"
                           asp-page="Export"
                           asp-route-SearchString="@Model.SearchString"
                           asp-route-MovieGenre="@Model.MovieGenre"
                           asp-route-PageIndex="@Model.PageIndex"
                           asp-route-exportMode="page">
                            Export Current Page
                        </a>
                    </div>
                </form>

                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-dark">
                        <thead>
                            <tr>
                                <th style="width: 25%;">@Html.DisplayNameFor(model => model.Movie[0].Title)</th>
                                <th style="width: 15%;">@Html.DisplayNameFor(model => model.Movie[0].ReleaseDate)</th>
                                <th style="width: 15%;">@Html.DisplayNameFor(model => model.Movie[0].Genre)</th>
                                <th style="width: 15%;">@Html.DisplayNameFor(model => model.Movie[0].Price)</th>
                                <th style="width: 15%;">@Html.DisplayNameFor(model => model.Movie[0].Rating)</th>
                                <th style="width: 15%;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Movie)
                            {
                                <tr>
                                    <td style="width: 15%;">@Html.DisplayFor(modelItem => item.Title)</td>
                                    <td style="width: 15%;">@item.ReleaseDate.ToString("dd-MM-yyyy")</td>
                                    <td style="width: 15%;">@Html.DisplayFor(modelItem => item.Genre)</td>
                                    <td style="width: 10%;">â‚¹ @item.Price.ToString("0.00")</td>
                                    <td style="width: 10%;">@Html.DisplayFor(modelItem => item.Rating)</td>
                                    <td style="width: 30%;">
                                        <div class="d-flex flex-row justify-content-start align-items-center gap-2 flex-wrap">
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-transparent me-1">Edit</a>
                                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-transparent me-1">Details</a>
                                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-transparent">Delete</a>
                                        }
                                        else
                                        {
                                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-transparent">Details</a>
                                        }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link"
                               asp-page="./Index"
                               asp-route-PageIndex="@(Model.PageIndex - 1)"
                               asp-route-SearchString="@Model.SearchString"
                               asp-route-MovieGenre="@Model.MovieGenre">
                                Previous
                            </a>
                        </li>

                        @{
                            var maxDisplayPages = 5;
                            var startPage = Math.Max(1, Model.PageIndex - maxDisplayPages / 2);
                            var endPage = Math.Min(Model.TotalPages, startPage + maxDisplayPages - 1);
                            if ((endPage - startPage) < (maxDisplayPages - 1))
                            {
                                startPage = Math.Max(1, endPage - maxDisplayPages + 1);
                            }
                        }

                        @for (var i = startPage; i <= endPage; i++)
                        {
                            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                <a class="page-link"
                                   asp-page="./Index"
                                   asp-route-PageIndex="@i"
                                   asp-route-SearchString="@Model.SearchString"
                                   asp-route-MovieGenre="@Model.MovieGenre">
                                    @i
                                </a>
                            </li>
                        }

                        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                            <a class="page-link"
                               asp-page="./Index"
                               asp-route-PageIndex="@(Model.PageIndex + 1)"
                               asp-route-SearchString="@Model.SearchString"
                               asp-route-MovieGenre="@Model.MovieGenre">
                                Next
                            </a>
                        </li>
                    </ul>
                </nav>

            </div>
        </div>
    </div>
</div>
