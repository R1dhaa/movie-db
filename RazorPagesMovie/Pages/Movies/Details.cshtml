@page "{id?}"
@model RazorPagesMovie.Pages_Movies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        background-image: url('/images/bg.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .card {
        background-color: rgba(0, 0, 0, 0.6);
        border: none;
        color: white;
    }

    .card-header {
        background-color: rgba(0, 0, 0, 0.7);
    }

    dt, dd {
        color: white;
    }

    a {
        color: #ccc;
    }

    a:hover {
        color: white;
        text-decoration: underline;
    }
</style>

<div class="container d-flex justify-content-center align-items-center" style="min-height: calc(100vh - 140px);">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header text-center border-0">
                <h4 class="mb-0">Movie Details</h4>
            </div>
            <div class="card-body">
                <dl class="row mb-4">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Movie.Title)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Movie.Title)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Movie.ReleaseDate)</dt>
                    <dd class="col-sm-9">@Model.Movie.ReleaseDate.ToString("dd-MM-yyyy")</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Movie.Genre)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Movie.Genre)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Movie.Price)</dt>
                    <dd class="col-sm-9">â‚¹ @Model.Movie.Price.ToString("0.00")</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Movie.Rating)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Movie.Rating)</dd>
                </dl>

                <div class="text-center">
                    <a asp-page="./Edit" asp-route-id="@Model.Movie.Id" class="btn btn-outline-light me-3">Edit</a>
                    <a asp-page="./Index" class="btn btn-outline-light">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
